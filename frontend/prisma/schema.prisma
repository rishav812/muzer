generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  name      String
  email     String   @unique
  provider  Provider
  streams   Stream[]
  upvotes   Upvote[]
  createdAt DateTime @default(now())
}

model Stream {
  id             String     @id @default(uuid())
  type           StreamType 
  active         Boolean
  url            String
  extractedId    String
  title          String     @default("")
  smallImg       String     @default("")
  bigImg         String     @default("")
  upvotes        Upvote[]
  userId         String
  user           User       @relation(fields: [userId], references: [id])    
}

model Upvote {
  id        String     @id @default(uuid())
  userId    String
  streamId  String
  user      User       @relation(fields: [userId], references: [id])
  stream    Stream     @relation(fields: [streamId], references: [id])
  @@unique([userId, streamId])
}

enum Provider {
  Google
}

enum StreamType {
  Spotify
  Youtube
}